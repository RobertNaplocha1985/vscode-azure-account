{
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "features": {
  }const vscode = require('vscode');
const azdata = require('azure-account');

function activate(context) {
    let disposable = vscode.commands.registerCommand('extension.loginToAzure', async () => {
        const azureAccount = new azdata.AzureAccount();
        
        try {
            await azureAccount.signIn();
            vscode.window.showInformationMessage('Zalogowano do konta Azure!');
        } catch (error) {
            vscode.window.showErrorMessage(`Błąd logowania: ${error.message}`);
        }
    });

    context.subscriptions.push(disposable);
}

function deactivate() {}

module.exports = {
    activate,
    deactivate
};

}

